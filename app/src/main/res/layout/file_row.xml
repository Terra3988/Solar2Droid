<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
	android:layout_marginTop="10dp"
	android:background="@color/panel_background" >
	<ImageView
		android:id="@+id/file_row_ico"
		android:src="@drawable/folder"
		android:layout_width="40dp"
		android:layout_height="40dp" />
	<TextView
		android:id="@+id/file_row_name"
		android:layout_toRightOf="@id/file_row_ico"
		android:layout_toLeftOf="@id/file_row_select"
		android:layout_marginLeft="5dp"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:gravity="center_vertical"
		android:text=""
		android:textColor="@color/text_color"
		android:textSize="20sp" />
	<ImageView
		android:id="@+id/file_row_select"
		android:layout_alignParentRight="true"
		android:src="@drawable/agree"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_centerVertical="true" />
</RelativeLayout>